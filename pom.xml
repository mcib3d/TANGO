	<build>
		<plugins>
			<plugin>
				<!-- We depend on at least java 1.5. -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>download-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<id>install-drop_finder</id>
						<phase>process-resources</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>http://imagejdocu.tudor.lu/lib/exe/fetch.php?media=plugin:analysis:droplet_counter:droplet_finder.jar</url>
							<unpack>false</unpack>
							<outputDirectory>${basedir}/lib</outputDirectory>
							<outputFileName>droplet_finder.jar</outputFileName>
							<!--<md5>df65b5642f33676313ebe4d5b69a3fff</md5>-->
						</configuration>
					</execution>
					<execution>
						<id>install-mcib3D</id>
						<phase>process-resources</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>http://sites.imagej.net/Tboudier/plugins/mcib3d-suite/mcib3d-core.jar-20151214144913</url>
							<unpack>false</unpack>
							<outputDirectory>${basedir}/lib</outputDirectory>
							<outputFileName>mcib3d-core-20151214144913.jar</outputFileName>
							<!--<md5>df65b5642f33676313ebe4d5b69a3fff</md5>-->
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
